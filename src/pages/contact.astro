---
import Sect from "../layouts/Sect.astro";
import { profile } from "../data";
import ContactForm from "../components/react/ContactForm";

let url = import.meta.env.VITE_GOOGLE_SUBMISSION_LINK;
---

<Sect layout_title="My Contact \ Leye" title="Contact" cls="bg-blue-5 bg-opacity-60">
  <div class="grid md:grid-cols-2 gap-6">
    <div class="flex flex-col gap-12 [&>div]:text-blue-4 [&>div>div]:text-3xl [&>div>div]:text-white [&>div>div]:pt-2 [&>div>div]:tracking-[0.15rem]">
      <div>
        Email
        <div>{profile.email}</div>
      </div>
      <div>
        Socials
        <div>
          <div class="text-5xl flex gap-4 pt-1">
            {profile.socials.map((social) => <a href={social.link} class={social.icon} target="_blank" />)}
          </div>
        </div>
      </div>
      <div>
        Base
        <div>{profile.base.location}<br />{profile.base.country}</div>
      </div>
    </div>
    <div>
      <div class="pt-10 md:pt-32 pb-8 text-right text-blue-4">Reach out to me</div>
      <ContactForm url={url} client:visible />
    </div>
  </div>
  <!-- for some reason, unocss icons not loading dynamically so needed to add values here to kinda preload it -->
  <div class="hidden i-skill-icons-linkedin i-skill-icons-github-light"></div>
</Sect>
